<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="26dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:id="@+id/relativelayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/expense_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
  android:layout_toEndOf="@+id/image_expense_mode"
                android:paddingTop="10dp"
                android:text="Expense Date"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/image_expense_mode" />

            <TextView
                android:id="@+id/expense_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/expense_date"
                android:paddingTop="10dp"
                android:text="@string/Expense_time"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/expense_date" />

            <TextView
                android:id="@+id/AddExpense_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:text="Expense Name"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:layout_below="@+id/expense_date"
                android:layout_toRightOf="@+id/image_expense_mode"
                android:layout_toEndOf="@+id/image_expense_mode" />

            <TextView
                android:id="@+id/expense_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Rs 5000"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/image_expense_mode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/AddExpense_name"
                android:paddingTop="10dp"
                android:layout_toRightOf="@+id/image_expense_mode">
            <TextView
                android:id="@+id/payeename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid To:-"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/payeename2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Payee"
                android:textSize="15sp"
                />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
